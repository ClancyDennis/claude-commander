{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Commander",
  "identifier": "com.claude.commander",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {},
  "app": {
    "windows": [
      {
        "title": "Claude Commander",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "visible": true,
        "center": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
